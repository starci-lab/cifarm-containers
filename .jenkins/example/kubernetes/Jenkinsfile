podTemplate(containers: [
    containerTemplate(
        name: 'kubectl', 
        image: 'bitnami/kubectl:latest', 
        command: 'sleep', 
        args: '30d'
    )
]) {
    node(POD_LABEL) {
        stage('Test kubectl') {
            container('kubectl') {
                stage('Create pod nginx') {
                    // Step 1: Create the nginx pod
                    sh "kubectl get pods -n cicd"
                }
            }
        }
    }
}