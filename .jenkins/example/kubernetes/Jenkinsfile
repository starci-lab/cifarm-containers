podTemplate(serviceAccount: 'jenkins-agent', containers: [
  containerTemplate(
    name: 'kubectl',
    image: 'bitnami/kubectl',
    command: 'sleep',
    args: '30d'
  )
]) {
  node(POD_LABEL) {
    stage('List Configmaps') {
      // Execute kubectl get pods inside the kubectl container
      container('kubectl') {
        sh 'echo "kubectl"'
        sh 'kubectl get pods -n cicd'
      }
    }
  }
}